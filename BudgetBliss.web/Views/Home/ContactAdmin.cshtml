<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Budget Bliss - Contact</title>
    <link rel="stylesheet" href="@Href("~/Content/Style.css")">
</head>
<body>
    <div class="parallax">
        <div class="content">
            <h2 class="left-text red">Admin</h2>
            <section class="contact-section">
                <div class="white center-text">
                    <h2>Contact Us</h2>
                    <p style="margin-bottom: 20px;">If you have any questions, feel free to reach out to us! We're here to help.</p>
                </div>

                <form action="#">
                    <label for="name">Name:</label>
                    <input type="text" id="name" name="name" required>

                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>

                    <label for="message">Message:</label>
                    <textarea id="message" name="message" maxlength="255" required></textarea>
                    <div id="charCount" class="char-count">0/255</div>

                    <button type="submit">Submit</button>
                </form>
            </section>

            <script>
                // Character Count Script
                const messageInput = document.getElementById("message");
                const charCountDisplay = document.getElementById("charCount");

                messageInput.addEventListener("input", () => {
                    const currentLength = messageInput.value.length;
                    charCountDisplay.textContent = `${currentLength}/255`;
                });
            </script>
        </div>
    </div>
</body>
</html>
