@{
    ViewBag.Title = "Budget Bliss - Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Budget Bliss - Profile</title>
    <link rel="stylesheet" href="@Href("~/Content/Style.css")">
</head>
<body>
    <div class="parallax">
        <div class="content">
            <section class="profile-section">
                <div style="text-align: center;">
                    <div class="white">
                        <h2>Your Profile</h2>
                        <p style="margin-bottom: 20px">Manage your personal information below.</p>
                    </div>
                </div>
                <form action="@Url.Action("UpdateProfile", "Profile")" method="post">
                    <label for="username">Username:</label>
                    <input type="text" id="username" name="username" value="JohnDoe" required>

                    <label for="name">Full Name:</label>
                    <input type="text" id="name" name="name" value="John Doe" required>

                    <label for="email">Email Address:</label>
                    <input type="email" id="email" name="email" value="john@example.com" required>

                    <button type="submit">Update Profile</button>
                </form>
            </section>
            </div>
        </div>
</body>
</html>
